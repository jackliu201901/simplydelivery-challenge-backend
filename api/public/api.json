{
    "openapi": "3.0.0",
    "info": {
        "title": "Pizza API",
        "version": "0.0.1"
    },
    "servers": [
        {
            "url": "http://localhost:80",
            "description": "Local development environment"
        }
    ],
    "paths": {
        "/pizzas": {
            "get": {
                "summary": "Returns all pizzas",
                "operationId": "index",
                "responses": {
                    "200": {
                        "description": "pizzas response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Pizza"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Adds a new pizza",
                "operationId": "create",
                "requestBody": {
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "price": {
                                        "type": "number"
                                    },
                                    "properties": {
                                        "type": "array",
                                        "items": {
                                            "type": "string",
                                            "default": "",
                                            "enum": [
                                                "vegan",
                                                "vegetarian",
                                                "glutenfree",
                                                "spicy",
                                                "sweet"
                                            ]
                                        }
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "name": "Pizza Hawai",
                                    "price": "7.99",
                                    "properties": "vegan"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Pizza"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Bad Entity"
                    }
                }
            }
        },
        "/pizzas/{id}": {
            "get": {
                "summary": "Returns a single pizza based on the id given",
                "operationId": "show",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of pizza to fetch",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Single pizza response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Pizza"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Pizza not found"
                    }
                }
            },
            "put": {
                "summary": "Adds a new pizza",
                "operationId": "update",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of pizza to update",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "price": {
                                        "type": "number"
                                    },
                                    "properties": {
                                        "type": "array",
                                        "items": {
                                            "type": "string",
                                            "default": "",
                                            "enum": [
                                                "vegan",
                                                "vegetarian",
                                                "glutenfree",
                                                "spicy",
                                                "sweet"
                                            ]
                                        }
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "name": "Pizza Hawai",
                                    "price": "7.99",
                                    "properties": "vegan"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Updated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Pizza"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Bad Entity"
                    }
                }
            },
            "delete": {
                "summary": "Deletes a single pizza based on the id given",
                "operationId": "App\\Http\\Controllers\\PizzaController::destroy",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of pizza to delete",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Delete operation successful"
                    },
                    "404": {
                        "description": "Pizza not found"
                    }
                }
            }
        },
        "/pizzas/{id}/{property}": {
            "post": {
                "summary": "Adds a property to a pizza",
                "operationId": "addProperty",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of pizza to update",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    },
                    {
                        "name": "property",
                        "in": "path",
                        "description": "Name of the property to add to the pizza",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Delete operation successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Pizza"
                                }
                            }
                        }
                    },
                    "204": {
                        "description": "Nothing happened, property was already present"
                    },
                    "404": {
                        "description": "Pizza not found"
                    },
                    "422": {
                        "description": "Invalid property given"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Pizza": {
                "type": "object",
                "allOf": [
                    {
                        "required": [
                            "price"
                        ],
                        "properties": {
                            "id": {
                                "type": "integer",
                                "format": "int32"
                            },
                            "name": {
                                "type": "string"
                            },
                            "price": {
                                "type": "number",
                                "format": "float"
                            },
                            "properties": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "default": "",
                                    "enum": [
                                        "vegan",
                                        "vegetarian",
                                        "glutenfree",
                                        "spicy",
                                        "sweet"
                                    ]
                                }
                            }
                        },
                        "type": "object"
                    }
                ]
            }
        },
        "securitySchemes": {
            "apiKey": {
                "type": "apiKey",
                "name": "X-API-KEY",
                "in": "header"
            }
        }
    },
    "security": [
        {
            "apiKey": []
        }
    ]
}